<%= form_with(url: signup_path, model: @user, local: true, class: 'w-full mt-10') do |form| %>
  <h1 class='font-bold text-xl text-center mb-6'>Sign up</h1>

  <%= form.text_field :email, placeholder: 'Email', class: 'text-input mb-5 w-full' %>

  <%= form.password_field :password, placeholder: 'Password', class: 'text-input mb-5 w-full' %>
  <%= form.password_field :password_confirmation, placeholder: 'Password confirmation', class: 'text-input mb-5 w-full' %>

  <%= form.submit nil, class: 'btn btn-primary w-full' %>
<% end %>