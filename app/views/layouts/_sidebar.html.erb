<% if Current.user %>
  <div class='flex flex-col h-screen py-3 px-3 z-10 bg-primary border-r border-borders w-[13%]'>
    <div class='flex flex-col flex-1 gap-2'>
      <%= link_to 'Reader', root_path, class: 'font-serif font-bold text-3xl py-6 lg:px-5 px-10' %>
      <%= link_to '🌎 All', feed_all_path, class: "btn hover:bg-primary-button-hover #{nav_active('feeds', 'all')}" %>
      <%= link_to '🖨 Feeds', feed_feeds_path, class: "btn hover:bg-primary-button-hover #{nav_active('feeds', 'feeds')}" %>
      <%= link_to '⏳ Read later', feed_read_later_path, class: "btn hover:bg-primary-button-hover #{nav_active('feeds', 'read_later')}" %>
      
      
      <%= link_to 'New source', new_source_path %>
      <%= link_to 'Read later', new_article_path %>
    </div>

    <div class='flex flex-col'>
      <div class='flex mb-2 items-center justify-center viewport-buttons <%= Current.user.preferred_size %>' data-controller='viewport-width' data-viewport-width-size-value='<%= Current.user.preferred_size %>'>
        <div class='viewport-button-minus border border-gray-300 rounded-l cursor-pointer px-2 py-1 hover:bg-blue-100 hover:border-blue-300' data-action='click->viewport-width#minus'>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 12h-15" />
          </svg>
        </div>
        <div class='viewport-button-auto border-y border-gray-300 cursor-pointer px-2 py-1 hover:bg-blue-100 hover:border-blue-300' data-action="click->viewport-width#auto">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 20.25h12m-7.5-3v3m3-3v3m-10.125-3h17.25c.621 0 1.125-.504 1.125-1.125V4.875c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125z" />
          </svg>
        </div>

        <div class='viewport-button-plus border border-gray-300 rounded-r cursor-pointer px-2 py-1 hover:bg-blue-100 hover:border-blue-300' data-action='click->viewport-width#plus'>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
          </svg>
        </div>
      </div>

      <%= link_to 'Log Out', logout_path, class: "btn btn-link text-center" %>
    </div>
  </div>  
<% end %>