<div class="relative z-40 hidden" id="modal" aria-labelledby="modal-title" role="dialog" aria-modal="true" data-modal-target='container' data-controller='modal'>
  <!--
    Background backdrop, show/hide based on modal state.

    Entering: "ease-out duration-300"
      From: "opacity-0"
      To: "opacity-100"
    Leaving: "ease-in duration-200"
      From: "opacity-100"
      To: "opacity-0"
  -->
  <div class="fixed inset-0 z-30 bg-gray-500 bg-opacity-75 transition-opacity" data-modal-target="backdrop" data-action="click->modal#closeOnBackdropClick"></div>

  <div class="fixed z-40 inset-0 overflow-y-auto">
    <div class="flex items-end sm:items-center justify-center min-h-full p-4 text-center sm:p-0"  data-action="click->modal#closeOnBackdropClick">
      <!--
        Modal panel, show/hide based on modal state.

        Entering: "ease-out duration-300"
          From: "opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
          To: "opacity-100 translate-y-0 sm:scale-100"
        Leaving: "ease-in duration-200"
          From: "opacity-100 translate-y-0 sm:scale-100"
          To: "opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
      -->
      <div class="relative bg-white rounded text-left overflow-hidden shadow-xl transform transition-all sm:max-w-sm sm:w-full" data-modal-target='modal'>
        
      </div>
    </div>
  </div>
</div>