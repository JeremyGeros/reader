<div class='relative flex' data-controller='dropdown'>
  <div data-dropdown-target='overlay' data-action='click->dropdown#closeDropdown' class='hidden fixed inset-0'></div>
  <button class='btn btn-secondary' data-action='click->dropdown#toggleDropdown'>
    <% if button %>
      <%= button %>
    <% else %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 12a.75.75 0 11-1.5 0 .75.75 0 011.5 0zM12.75 12a.75.75 0 11-1.5 0 .75.75 0 011.5 0zM18.75 12a.75.75 0 11-1.5 0 .75.75 0 011.5 0z" />
      </svg>
    <% end %>
  </button>

  <div data-dropdown-target='dropdown' class="origin-top-right absolute right-0 top-full mt-1 w-56 shadow bg-white border border-borders dark:border-zinc-600 focus:outline-none hidden rounded-md" role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1">
    <%= yield %>
  </div>
</div>