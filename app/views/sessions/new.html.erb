<%= render 'signup/homepage' do %>
  <%= form_tag sessions_path, class: 'w-2/3 mx-auto mt-10 bg-white dark:bg-zinc-800 rounded p-6' do |form| %>
    <h1 class='font-bold text-2xl mb-4'>Login</h1>

    <%= text_field_tag :email, '', placeholder: 'Email', class: 'text-input mb-5 w-full' %>
    <%= password_field_tag :password, '', placeholder: 'Password', class: 'text-input mb-5 w-full' %>
    
    <%= submit_tag 'Login', class: 'btn btn-primary w-full' %>
  <% end %>

  <%= link_to 'Sign up', signup_path, class: 'block my-4' %>
<% end %>